@model LoginModel

@{ ViewData["Title"] = "Login"; }

    <h1 class="text-center">Login Form</h1>

    <div class="form-row justify-content-center">
        <div class="col-5">
            <form asp-action="Login">
                <div class="text-warning text-danger">@Model.LoginError</div>
                <div class="form-group">
                    <label asp-for="Email" class="custom-control-label">Email</label>
                    <input asp-for="Email" type="email" class="input-group-text" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="custom-control-label">Password</label>
                    <input asp-for="Password" type="password" class="input-group-text" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RememberMe" class="custom-control-label">Remember Me</label>
                    <input asp-for="RememberMe" type="checkbox" class="custom-checkbox" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Confirm" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>