@model RegDataInput
@{
    ViewData["Title"] = "Registration";
}

<h1 class="text-center">Registration Form</h1>

<div class="form-row justify-content-center">
    <div class="col-5">
        <form asp-action="Registration">
            <div class="form-group">
                <label asp-for="UserName" class="custom-control-label">@Model.UserNameLable</label>
                <input asp-for="UserName" type="text" class="input-group-text" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="custom-control-label">@Model.EmailLable</label>
                <input asp-for="Email" type="email" class="input-group-text" />
                <span asp-validation-for="Email" class="text-danger">
                    @*Check for the correct Email can be done more complex but not done for time saving*@
                    @if (Model.Email != null && !Model.Email.Contains('@') && !Model.Email.Contains('.'))
                    {
                        <text>Please enter a valid Email</text>
                    }
                </span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="custom-control-label">@Model.PasswordLable</label>
                <input asp-for="Password" type="password" class="input-group-text" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfPassword" class="custom-control-label">@Model.ConfPasswordLable</label>
                <input asp-for="ConfPassword" type="password" class="input-group-text" />
                <span asp-validation-for="ConfPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
